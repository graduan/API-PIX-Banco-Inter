    "require": {
        "php": "^7.3|^8.0",
        "guzzlehttp/guzzle": "^7.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3.3",
        "squizlabs/php_codesniffer": "^3.6",
        "phan/phan": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "GRaduan\\ApiInterV2\\": "src/" 
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GRaduan\\ApiInterV2\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors tests",
        "cs": "phpcs --standard=PSR12 src/",  
        "cs-test": "phpcs --standard=PSR12 tests/",
        "phan": "phan --allow-polyfill-parser",
        "check": [
            "@phan",
            "@cs",
            "@cs-test",
            "@test"
        ] 
    },
